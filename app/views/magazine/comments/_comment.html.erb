<%= content_tag(:article, :id => "article_comment_#{comment.id}", :class => "article_comment") do %>
  <%= content_tag(:div, :class => "article_comment_name", :id => "article_comment_#{comment.id}_name") do %>
    <%= comment.website? ? link_to(comment.name, comment.website) : comment.name %> wrote:
  <% end %>
  

  <%= content_tag(:div, :class => "article_comment_body", 
      :id => "article_comment_#{comment.id}_body") do %>
      <%= format_content comment.body || "" %>
  <% end %>
  
  <%= content_tag(:footer) do %>
    Posted on <%= time_tag(comment.created_at, Magazine.configuration.datetime_format) %>
  <% end %>
  
  <%= render :partial => "magazine/comments/admin_links" %>
  
<% end if comment.persisted? %>

