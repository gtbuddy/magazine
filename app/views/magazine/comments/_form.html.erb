
<%= form_for @comment, :url =>magazine_article_magazine_comments_path(@article), :remote => true, 
  :html => {
    :class => "new_article_comment", :id => "new_article_comment" } do |f| -%>
  <p>Leave a comment</p>
  
  <%= field :class => "hidden" do %>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
    Hide me using CSS
  <% end %>
  
  <% if current_blogger %>
    <%= field :class => "hidden" do %>
      <%= render :partial => 'magazine/comments/fields', :locals => {:f => f} %>  
    <% end %>
  <% end %>
  
  <%= field do %>
    <%= f.label :body, "Your comment *" %><br>
    <%= f.text_area :body %><br>
    <%= errors_on(@comment, :body) %>
  <% end %>
  
  <%= actions do %>
    <%= f.submit "Add Comment", :disable_with => 'Adding Comment...' %>
  <% end %>
<% end -%>
