<%= login_required :class => "actions", :id => "new_article_link" do %>
  <%= link_to 'New Article', new_magazine_article_path %>
<% end %>

<% if @articles.any? %>

  <%= render :partial => "magazine/articles/article", 
    :collection => @articles, 
    :spacer_template => "article_spacer", 
    :locals => {:show_comments_count => true}  %>
<% else %>
  
  <%= render :partial => "magazine/articles/empty" %>
  
<% end %>

<%= render "pagination" %>

<br />
<%= login_required :class => "actions", :id => "new_article_link" do %>
  <h3><%= link_to("Submit Article!", new_magazine_article_path) %></h3>
<% end %>

