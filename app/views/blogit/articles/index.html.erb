<%= login_required :class => "actions", :id => "new_article_link" do %>
  <%= link_to 'New Article', new_article_path %>
<% end %>

<% if @articles.any? %>

  <%= render :partial => "blogit/articles/article", 
    :collection => @articles, 
    :spacer_template => "article_spacer", 
    :locals => {:show_comments_count => true}  %>
<% else %>
  
  <%= render :partial => "blogit/articles/empty" %>
  
<% end %>

<%= render "pagination" %>